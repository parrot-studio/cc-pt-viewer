{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-security"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "semicolon": [
      true,
      "never"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "trailing-comma": false,
    "jsx-no-bind": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}